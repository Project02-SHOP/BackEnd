drop database shop;

create database shop;

use shop;

CREATE TABLE `user` (
	`user_idx` BIGINT	auto_increment primary key, #유저 식별값
	`email` varchar(45) NOT NULL, #이메일
	`password` varchar(100) NOT NULL, #비밀번호
	`phoneNumber` varchar(100),
	`address` varchar(100),
	`gender` varchar(100),
	`pay_money` INTEGER,
    `status` varchar(20),
);
